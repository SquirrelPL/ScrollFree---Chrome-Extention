{
    "name": "ScrollFree",
    "description": "Plugin to allow scrolling when webpage block that option",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
      },
      "permissions": ["storage"],
      "action": {
        "default_popup": "popup.html"
      },
    "icons": {
        "16": "/images/ScrollFreeLogo16.png",
        "32": "/images/ScrollFreeLogo32.png",
        "48": "/images/ScrollFreeLogo48.png",
        "128":"/images/ScrollFreeLogo128.png"
      },
      "permissions": ["storage", "activeTab", "scripting"]
      


  }